    <div class="container-fluid">
        <div class="row">
                @for(int i = 0; i < MaxItems; i++) {
                    <div class="col col-xl-2 pt-4 d-flex justify-content-center">
                        <Card></Card>
                    </div>
                }
        </div>
    </div>
</section>

@code{

    [Parameter]
    public int MaxItems {get; set;}
}