@page "/shop"

<section id="shop" class="p-3">
    <div class="container">
        <div class="row d-flex align-items-center justify-content-center py-5">
            <div class="col">
                <h2 class="fs-1 fw-bolder">Shop</h2>
            </div>
            <div class="col d-flex justify-content-end">
                <form>
                    <label for="sortby" class="pe-2">Filtra per:</label>
                    <select id="sortby" class="form-select-sm" aria-label="Sortby selection">
                        <option selected></option>
                        <option value="/">I pi√π popolari</option>
                        <option value="/">Nuovi arrivi</option>
                        <option value="/">Prezzo (crescente)</option>
                        <option value="/">Prezzo (decrescente)</option>
